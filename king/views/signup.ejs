        <script type="text/javascript"> 
            function signup() { 

                var email_rule =  /^[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*.[a-zA-Z]{2,3}$/i;
                // id 체크 정규식 : 숫자, 영문만 입력 가능
                var id_rule = /^[0-9a-z]+$/;
                // : 숫자, 특문 각 1회 이상, 영문은 2개 이상 사용하여 8자리 이상 입력
                var pass_rule = /(?=.*\d{1,50})(?=.*[~`!@#$%\^&*()-+=]{1,50})(?=.*[a-zA-Z]{2,50}).{8,50}$/;

                var email =$("#email").val();
                var password =$("#password").val();
                var userid =$("#userid").val();
                var phoneNum =$("#phoneNum").val();
                var name =$("#name").val();

                if(!email){
                    alert("이메일을 입력해주세요");
                    $("#email").focus();
                    return false;
                }
                if(!password){
                    alert("비밀번호를 입력해주세요");
                    $("#password").focus();
                    return false;
                }
                if(!userid){
                    alert("아이디를 입력해주세요");
                    $("#userid").focus();
                    return false;
                }
                if(!phoneNum){
                    alert("전화번호를 입력해주세요");
                    $("#phoneNum").focus();
                    return false;
                }
                if(!phoneNum){
                    alert("별명을 입력해주세요");
                    $("#name").focus();
                    return false;
                }
                // mail = email_id+"@"+email_domain;
                // $("#mail").val(mail);  
                
                if(!email_rule.test(email)){
                    alert("이메일을 형식에 맞게 입력해주세요.");
                    return false;
                }
                if(!id_rule.test(userid)){
                    alert("숫자, 영문만 입력 가능합니다 14자 이하.");
                    return false;
                }
                if(!pass_rule.test(password)){
                    alert("숫자, 특문 각 1회 이상, 영문은 2개 이상 사용하여 8자리 이상 20자 이하 입력해주세요.");
                    return false;
                }

                var param = {}; 
                param.userid = userid; 
                param.password = password; 
                param.name = name; 
                param.email = email; 
                param.phoneNum = phoneNum; 
                var ajax = $.ajax({ 
                    url: "/signup", 
                    data: param, 
                    type: 'POST', 
                    dataType: "JSON", 
                    success: function (result) { 
                            if(result.code == 0){
                                alert(result.msg); location.href = "/login"; 
                            }else if(result.code == 100){
                                alert(result.msg); 
                            }else if(result.code == 500){
                                alert(result.msg); location.href = "/signup"; 
                            }
                        } 
                    }); 
                } 
            </script>
